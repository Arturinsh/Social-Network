@model MVC_WEB_Page.Models.UsersOutput

<script src="~/Scripts/jquery-1.10.2.min.js"></script>

@{
    Layout = null;
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}
                  

<script type="text/javascript">
    var prevSearch;
    $(function () {

        $("#form").on("submit", function (e) {
            prevSearch = $("#person_name").val();
            e.preventDefault();
            if (prevSearch == "") {
                pagination(0);
            } else {
                //window.alert(prevSearch);
                $.ajax({
                    url: '@Url.Action("SearchUsers", "Home")',
                    type: "post",
                    data: {

                        SearchName: $("#person_name").val()
                    },
                    success: function (data) {
                        $("#content").html(data);
                    }
                });
            }//<--else end
        });

    });

    function pagination(id) {
        if (prevSearch == "" || typeof prevSearch === 'undefined') {
            $.ajax({
                url: '@Url.Action("AllUsersPart", "Home")',
                type: "post",
                data: {
                    id: id
                },
                success: function (data) {
                    $("#content").html(data);
                }
            });
        } else {
            $.ajax({
                url: '@Url.Action("SearchUsers", "Home")',
                       type: "post",
                       data: {

                           SearchName: $("#person_name").val(),
                           id:id
                       },
                       success: function (data) {
                           $("#content").html(data);
                       }
                   });

               }


    }//<-- function end


    function inputChanged() {
        prevSearch = $("#person_name").val();
       if (prevSearch == "" || typeof prevSearch === 'undefined') {
                        $.ajax({
                        url: '@Url.Action("AllUsersPart", "Home")',
                        type: "post",
                        data: {
                            
