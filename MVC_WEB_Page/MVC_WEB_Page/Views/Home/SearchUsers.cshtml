@model IEnumerable<MVC_WEB_Page.Models.ApplicationUser>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>

@{
    Layout = null;
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

<div class="row baseMainRow">

    <div class="col-md-3 leftBlock">

        <hr class="hrCentralBlock" />

    </div><!-- first column end-->
    
    <div class="col-md-7 centralBlock">
        <hr class="hrCentralBlock" />
        
      
        @using (Html.BeginForm("SearchUsers", "Home"))
        {
            @Html.TextBox("SearchName")
            <input type="submit" value="Search User" id="btn_submit" class="btn btn-primary" />
        }
        <br>
        <script>
            $(function () {

                $("#btn_submit").click(function () {
                    if ($("#SearchName").val() == "")
                        
                        alert("Enter User Name or Surname!");

                });//click
            });
        </script>

    @if (Model.Count()==0)
    {
        <div>
            User with that Name or Surname Not Found!
        </div>
        <br>
    }

            <div class="row ">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 col userImgHeight">

                        <div class="col-md-12 userImg"><img src="~/Content/Images/Profiles/@item.Image" class="img-responsive userImage" /> </div>
                        <div class="col-md-12 text-center"> @item.Name  @item.Surname </div>
                        <div class="col-md-12"> <span class="glyphicon glyphicon-plus"></span>  <span class="glyphicon glyphicon-envelope"></span> </div>
                    </div>

                }
            </div>


        </div><!-- second column end-->
    <div class="col-md-2 rightBlock">
        <hr class="hrCentralBlock" />



    </div><!-- third column end-->

</div><!--Row end-->
